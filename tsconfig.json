{
	"compilerOptions": {
		"emitDeclarationOnly": false,
		"lib": [
			"ESNext",
			"DOM"
		],
		"noEmit": true
	},
	"extends": "./node_modules/@lightrix/config/base/ts",
	"watchOptions": {
		"excludeDirectories": [
			"**/node_modules",
			"**/dist",
			"**/samples"
		],
		"fallbackPolling": "dynamicPriority",
		"synchronousWatchDirectory": true,
		"watchDirectory": "useFsEvents",
		"watchFile": "useFsEvents"
	}
}
