{
	"$schema": "https://json.schemastore.org/jsconfig",
	"compilerOptions": {
		"baseUrl": "./",
		"emitDeclarationOnly": false,
		"noEmit": true,
		"outDir": "Target",
		"rootDir": "."
	},
	"exclude": [
		"**/Dependency/**",
		"**/Documentation/**",
		"**/node_modules/**",
		"**/.git/**",
		"**/samples/**",
		"**/Target/**"
	],
	"extends": "@playform/build/jsconfig",
	"watchOptions": {
		"excludeDirectories": [
			"**/Dependency/**",
			"**/Documentation/**",
			"**/node_modules/**",
			"**/.git/**",
			"**/samples/**",
			"**/Target/**"
		]
	}
}
