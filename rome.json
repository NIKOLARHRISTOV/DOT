{
	"$schema": "node_modules/rome/configuration_schema.json",
	"files": {
		"maxSize": 5000000
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingComma": "all"
		},
		"globals": []
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"all": true
			},
			"complexity": {
				"all": true
			},
			"correctness": {
				"all": true
			},
			"nursery": {
				"all": true
			},
			"performance": {
				"all": true
			},
			"recommended": true,
			"security": {
				"all": true
			},
			"style": {
				"all": true,
				"noCommaOperator": "off"
			},
			"suspicious": {
				"all": true,
				"noAssignInExpressions": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"root": ".",
		"useIgnoreFile": true
	}
}
